{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "console": "readonly",
    "module": "readonly",
    "process": "readonly",
    "require": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "arrow-spacing": 2,
    "brace-style": 2,
    "eol-last": 2,
    "quotes": [2, "single"],
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "key-spacing": [2, {
      "afterColon": true
    }],
    "keyword-spacing": [2, {
      "after": true,
      "before": true
    }],
    "no-constant-condition": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": [2, {
      "allowAfterThis": true,
      "allowAfterSuper": true
    }],
    "no-unused-vars": 2,
    "semi": 2,
    "space-before-blocks": 2,
    "space-infix-ops": 2
  }
}
